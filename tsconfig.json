{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",                          // Gera os arquivos compilados em 'dist'
    "rootDir": "./src",                         // Garante que a pasta src seja onde os arquivos TS ficam
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"                               // Incluir todos os arquivos TS dentro da pasta src
  ],
  "exclude": [
    "node_modules",                             // Exclui a pasta node_modules
    "dist"                                      // Exclui a pasta dist, que é a pasta de saída
  ]
}
